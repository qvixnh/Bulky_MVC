@model Category
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control"/>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder"  class="p-0"></label>
            <input asp-for="DisplayOrder" class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary" style="width:100%">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-contorller="Category" asp-action="Index" class="btn btn-outline-secondary" style="width:100%">Back to List</a>
            </div>
        </div>
    </div>
</form>